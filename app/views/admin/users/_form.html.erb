<% form_for [:admin,@user], :builder => LabelFormBuilder do |f| %>
  <%= f.error_messages %>
  <%= f.text_field :name %>
  <%= f.text_field :username %>
  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation, :label => 'Password confirmation' %>
  <%= f.submit @user.new_record? ? 'Create' : 'Update'%>
<% end %>